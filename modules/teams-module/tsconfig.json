{
    "compilerOptions": {
      "noImplicitAny": false,
      "outDir": "./lib",
      "module": "esnext",
      "target": "ES5",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop":true,
      "skipLibCheck": true,
      "emitDeclarationOnly": true,
      "suppressImplicitAnyIndexErrors": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "@root/*": ["src/*"]
      },
      "plugins": [
        {
          //used to replace the alias by relative path
          "transform": "typescript-transform-paths",
          "afterDeclarations": true
        }
      ]
    },
    "include": ["src/lib"],
    "exclude": ["src/lib/**/tests","src-async","node_modules"]
}
